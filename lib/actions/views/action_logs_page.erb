<script type="text/javascript" src="<%= res_url("views/ki-flow.coffee", RepositoryWeb) %>"></script>
<script type="text/javascript" src="<%= res_url("views/logs.coffee") %>"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            initRouter()
        });
    </script>
</body>
